#include <stdio.h>
int main(){
	
int matrix[3][4]={
	{10,22,35,41},
	{50,65,73,80},
	{91,10,11,12}
	};
int i , j , max ,row , col ;
max=0;
for (i=0; i<3;i++){
	for (j=0; j<4; j++){
		if (matrix[i][j]>max){
			max = matrix[i][j];
			row = i;
			col = j;
		}
		printf("%d ", matrix[i][j]);

	}
	printf("\n");
}
	
			printf("row is %d and column is %d\n ", row, col);
			printf("max value is %d", max);
	return 0;
}
